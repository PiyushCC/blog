---
layout: base.njk
title: Archive
---

<div class="main-content-wrap">
  <h1>Archive</h1>
  <p>Posts by year.</p>
  {% for yearGroup in collections.postsByYear %}
  <section class="archive-year" aria-label="Posts from {{ yearGroup.year }}">
    <h2>{{ yearGroup.year }}</h2>
    <ul>
      {% for post in yearGroup.posts %}
      <li>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
        <time datetime="{{ post.date | date('YYYY-MM-DD') }}">{{ post.date | date('YYYY-MM-DD') }}</time>
      </li>
      {% endfor %}
    </ul>
  </section>
  {% endfor %}
</div>
